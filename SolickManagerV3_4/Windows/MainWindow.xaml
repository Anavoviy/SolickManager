<Window x:Class="SolickManagerV3_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolickManagerV3_4"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="720" Width="1280"
        Background="#FAFAFA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid
            Background="#17C3B2">
            <Menu Style="{DynamicResource MenuSolick}" VerticalAlignment="Center">
                <MenuItem Header="Файл"/>
                <MenuItem Header="Справка"/>
                <MenuItem Header="Вид"/>
                <MenuItem Header="Настройки"/>
            </Menu>
            <Label Content="{Binding CurrentPage.Worker}" 
                   HorizontalAlignment="Right"
                   VerticalContentAlignment="Center"
                   Width="auto"
                   Margin="0 0 50 0"
                   Foreground="White"
                   FontSize="20"
                   FontFamily="Inter/#Inter-V.ttf"/>
            <Button Style="{DynamicResource ButtonMenu}"
                    HorizontalAlignment="Right"
                    Width="40"
                    Height="40"/>
        </Grid>

        <Frame Grid.Row="1" 
               NavigationUIVisibility="Hidden" 
               Content="{Binding CurrentPage}"/>
    </Grid>
</Window>